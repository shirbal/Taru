<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="@dimen/lib_calendar_day_size"
        android:layout_height="@dimen/lib_calendar_day_size"
        android:layout_marginLeft="@dimen/lib_calendar_day_padding_sides"
        android:layout_marginRight="@dimen/lib_calendar_day_padding_sides">

    <TextView
        android:id="@+id/lib_calendar_day_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="4dp"
        android:textColor="@color/lib_calendar_day_textcolor"
        android:textSize="@dimen/lib_calendar_day_textsize"
        android:background="@drawable/list_selector_holo_light"
        android:gravity="top|center"/>

    <View
        android:id="@+id/lib_calendar_underline"
        android:layout_height="2dp"
        android:layout_width="20dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/lib_calendar_number"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="12dp"
        android:textColor="@color/lib_calendar_day_textcolor"
        android:textSize="@dimen/lib_calendar_day_textsize"
        android:background="@drawable/list_selector_holo_light"
        android:gravity="center"/>

</RelativeLayout>